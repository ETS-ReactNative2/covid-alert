rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth.uid != null;
    }

    function isAdminUser() {
      return request.auth.token.email.matches('.*@(un[.]org|who[.]int)');
    }

    match /patients/{patientId} {
      // TODO: Patient should not be able to verify themselves
      allow read, update: if isSignedIn() && (resource.id == request.auth.uid || isAdminUser())

      function getPatientData() {
        return get(/databases/$(database)/documents/patients/$(patientId))
      }

      match /locations/{locationId} {
        allow read, create: if isSignedIn() && getPatientData().id == request.auth.uid
      }
    }
  }
}